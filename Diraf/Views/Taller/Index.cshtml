@model IEnumerable<Diraf.Models.Taller>

@{
    ViewBag.Title = "Taller";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Taller</h2>

<p>
    @Html.ActionLink("Crear Nuevo", "Create")
</p>
    @using (Html.BeginForm())
{
    <p>
        Nombre Taller: @Html.TextBox("Busqueda")
        <input type="submit" value="Buscar" />
    </p>

}
<p></p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NombreTaller)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Active)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NombreTaller)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Active)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Consultar", "Details", new { id = item.Id }) |
                @Html.ActionLink("Eliminar", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
